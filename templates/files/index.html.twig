{% extends 'base.html.twig' %}

{% block title %}Files index{% endblock %}

{% block body %}
    <h1>Files index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>URL</th>
                <th>Description</th>
                <th>Namefile</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ file.id }}</td>
                <td>{{ file.URL }}</td>
                <td>{{ file.description }}</td>
                <td>{{ file.namefile }}</td>
                <td>{{ file.title }}</td>
                <td>
                    <a href="{{ path('files_show', {'id': file.id}) }}">show</a>
                    <a href="{{ path('files_edit', {'id': file.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('files_new') }}">Create new</a>
{% endblock %}
